<Project>
  <PropertyGroup>
    <!-- Treat warnings as errors, except during NuGet Pack (NU5017 false positive for multi-targeting) -->
    <TreatWarningsAsErrors Condition="'$(NoBuild)' != 'true'">true</TreatWarningsAsErrors>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <!-- Enforce XML documentation on public APIs -->
    <NoWarn>$(NoWarn);1591</NoWarn> <!-- Remove this to enforce XML docs warnings -->
  </PropertyGroup>
</Project>
