<Project>
	<!-- Universal NuGet Package Configuration for Voyager Poland -->
	<!-- These settings apply to all NuGet packages published by Voyager -->

	<PropertyGroup>
		<!-- Package Generation -->
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<Product>Voyager Common Libraries</Product>

		<RepositoryType>git</RepositoryType>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>

		<!-- XML Documentation is handled by Build.CodeQuality.props -->
		<!-- Custom DocumentationFile path removed - use default naming -->
	</PropertyGroup>

	<!-- Include README in all packages -->
	<ItemGroup>
		<None Include="$(MSBuildThisFileDirectory)..\README.md" Pack="true" PackagePath="\"
			Condition="Exists('$(MSBuildThisFileDirectory)..\README.md')" />
	</ItemGroup>

	<!-- .NET Framework 4.8 - Common polyfills for modern C# features -->
	<ItemGroup Condition="'$(TargetFramework)' == 'net48'">
		<PackageReference Include="IsExternalInit" Version="1.0.3">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>
</Project>